# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newline = true
max_line_length = 119
tab_width = 4
trim_trailing_whitespace = true

[*.scss]
indent_size = 2

[{*.ats,*.ts}]
indent_size = 2
tab_width = 2

[{*.cjs,*.js}]
indent_size = 2
tab_width = 2

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
indent_size = 2
tab_width = 2

[*.feature]
indent_size = 4
indent_style = tab
